<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ua.rd.webbanking.entities.Payment" table="payments" catalog="mkyong">
        <id name="paymentID" type="java.lang.Integer">
            <column name="payments_id" not-null="true"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="paymentCreditCard" class="ua.rd.webbanking.entities.CreditCard" fetch="select">
            <column name="card_id" not-null="true"/>
        </many-to-one>

        <property name="paymentAmount" type="java.math.BigDecimal">
            <column name="payments_amount" not-null="true"/>
        </property>

        <property name="paymentDestination" type="string">
            <column name="payments_type" length="100" not-null="true"/>
        </property>

        <property name="paymentDate" type="date">
            <column name="payments_date" not-null="true"/>
        </property>

    </class>
</hibernate-mapping>